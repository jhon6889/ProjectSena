@model IEnumerable<Contacto>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">
        @TempData["MensajeExito"]
    </div>
}

<table>
    <thead>
        <th>Nombre</th>
        <th>Tel√©fono</th>
        <th>Email</th>
        <th>Acciones</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Telefono</td>
                <td>@item.Gmail</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                    
                    <form asp-action="Eliminar" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" >Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
