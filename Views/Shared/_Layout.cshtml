<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameXpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/template.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    
</head>

<body>
    <header>
        <span class="user-options">
            <a href="@Url.Action("Login", "Auth")">Ingresar</a> | <a href="@Url.Action("Registrar", "Auth")">Crear cuenta</a>
        </span>

        <div class="social-bar">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-youtube"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>

        <nav class="navbar-container">
            <div class="navbar">
                <img src="/img/logo.png" style="height: 120px; width: 100px; margin-left: 110px; transform: rotate(13deg);" alt="GameXpress Logo" class="logo">

                <div class="search-bar">
                    <div class="dropdown" style="margin-right: 21px;">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Categorias
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item category-btn" type="button">Motherboard</button></li>
                            <li><button class="dropdown-item category-btn" type="button">Teclados</button></li>
                            <li><button class="dropdown-item category-btn" type="button">Tarjetas Gráficas</button></li>
                        </ul>
                    </div>

                    <input type="text" placeholder="Buscar...">
                    <button class="search-btn"><i class="fas fa-search"></i></button>
                </div>

                <div class="cart-info" style="margin-right: 110px;">
                    <div class="flex" style="display: flex;">
                        <i class="fas fa-shopping-cart"></i>
                        <span>TU CESTA 0</span>
                    </div>
                    <span>COL $0</span>
                </div>
            </div>
        </nav>
    </header>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Selecciona todos los botones con la clase "category-btn"
        const categoryButtons = document.querySelectorAll('.category-btn');

        // Agrega un evento de clic a cada botón
        categoryButtons.forEach(button => {
            button.addEventListener('click', () => {
                alert('Debes iniciar sesión para acceder a esta categoría.');
            });
        });
    </script>
</body>




